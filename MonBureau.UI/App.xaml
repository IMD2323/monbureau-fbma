<!--  App.xaml - Enhanced with Modern Design System  -->
<!--  ============================================================================  -->
<Application
    x:Class="MonBureau.UI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="Views/StartupWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  Core Design System  -->
                <ResourceDictionary Source="/Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="/Resources/Styles/Typography.xaml" />
                <ResourceDictionary Source="/Resources/Styles/Buttons.xaml" />
                <ResourceDictionary Source="/Resources/Styles/Inputs.xaml" />
                <ResourceDictionary Source="/Resources/Styles/Cards.xaml" />
                <ResourceDictionary Source="/Resources/Styles/DataGrids.xaml" />
                <ResourceDictionary Source="/Resources/Styles/Animations.xaml" />
                <ResourceDictionary Source="/Resources/Styles/Components.xaml" />

                <!--  Converters  -->
                <ResourceDictionary
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:MonBureau.UI.Converters">

                    <converters:BoolToVisibilityConverter x:Key="BoolToVis" />
                    <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis" />
                    <converters:InverseBoolConverter x:Key="InverseBool" />
                    <converters:CaseStatusToStringConverter x:Key="StatusToString" />
                    <converters:ItemTypeToStringConverter x:Key="ItemTypeToString" />
                    <converters:DateFormatConverter x:Key="DateFormat" />
                    <converters:AmountFormatConverter x:Key="AmountFormat" />
                    <converters:GreaterThanOneConverter x:Key="GreaterThanOne" />
                    <converters:LessThanConverter x:Key="LessThanConverter" />

                    <FontFamily x:Key="IconFont">Segoe MDL2 Assets</FontFamily>
                </ResourceDictionary>

                <!--  Shared Templates  -->
                <ResourceDictionary Source="/Resources/SharedTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>