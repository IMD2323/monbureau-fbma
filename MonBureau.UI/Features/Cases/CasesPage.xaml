<Page
    x:Class="MonBureau.UI.Features.Cases.CasesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:MonBureau.UI.Converters"
    Background="{StaticResource BackgroundBrush}">

    <Page.Resources>
        <converters:CaseStatusToStringConverter x:Key="StatusToString" />
    </Page.Resources>

    <Grid>
        <!--  Loading Overlay - FIXED  -->
        <ContentControl
            Panel.ZIndex="999"
            Content="{Binding}"
            ContentTemplate="{StaticResource LoadingOverlayTemplate}" />

        <!--  Main Content  -->
        <ScrollViewer
            Padding="30"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!--  Page Header - FIXED  -->
                <ContentControl Content="{Binding}" ContentTemplate="{StaticResource PageHeaderTemplate}" />

                <!--  Search Bar - FIXED  -->
                <ContentControl Content="{Binding}" ContentTemplate="{StaticResource SearchBarTemplate}" />

                <!--  Cases List  -->
                <ItemsControl ItemsSource="{Binding Items}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,0,0,12"
                                Padding="20"
                                Background="White"
                                BorderBrush="#E5E7EB"
                                BorderThickness="1"
                                CornerRadius="12"
                                Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Icon  -->
                                    <Border
                                        Grid.Column="0"
                                        Width="60"
                                        Height="60"
                                        Margin="0,0,16,0"
                                        Background="#F3F4F6"
                                        CornerRadius="12">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Segoe MDL2 Assets"
                                            FontSize="28"
                                            Foreground="#2563EB"
                                            Text="&#xE8F1;" />
                                    </Border>

                                    <!--  Info  -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock
                                            FontSize="12"
                                            FontWeight="Medium"
                                            Foreground="#2563EB"
                                            Text="{Binding Number}" />
                                        <TextBlock
                                            Margin="0,4,0,4"
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Text="{Binding Title}" />
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontSize="13" Foreground="#6B7280">
                                                <Run Text="Client:" />
                                                <Run FontWeight="Medium" Text="{Binding Client.FullName, Mode=OneWay}" />
                                            </TextBlock>
                                            <TextBlock
                                                Margin="16,0,0,0"
                                                FontSize="12"
                                                Foreground="#9CA3AF"
                                                Text="{Binding OpeningDate, StringFormat='dd/MM/yyyy'}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!--  Status  -->
                                    <Border
                                        Grid.Column="2"
                                        Margin="16,0"
                                        Padding="12,6"
                                        VerticalAlignment="Center"
                                        Background="#EEF2FF"
                                        CornerRadius="6">
                                        <TextBlock
                                            FontSize="12"
                                            FontWeight="Medium"
                                            Foreground="#2563EB"
                                            Text="{Binding Status, Converter={StaticResource StatusToString}}" />
                                    </Border>

                                    <!--  Actions  -->
                                    <ContentControl
                                        Grid.Column="3"
                                        Content="{Binding}"
                                        ContentTemplate="{StaticResource ActionButtonsTemplate}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--  Pagination - FIXED  -->
                <ContentControl Content="{Binding}" ContentTemplate="{StaticResource PaginationTemplate}" />

                <!--  Empty State - FIXED  -->
                <ContentControl Content="{Binding}" ContentTemplate="{StaticResource EmptyStateTemplate}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>