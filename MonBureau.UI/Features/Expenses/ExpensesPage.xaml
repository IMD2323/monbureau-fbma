<Page
    x:Class="MonBureau.UI.Views.Pages.ExpensesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource BackgroundBrush}">

    <Grid>
        <!--  Loading Overlay - FIXED  -->
        <ContentControl
            Panel.ZIndex="999"
            Content="{Binding}"
            ContentTemplate="{StaticResource LoadingOverlayTemplate}" />

        <!--  Main Content  -->
        <ScrollViewer Padding="30" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!--  Header with Button  -->
                <Grid Margin="0,0,0,32">
                    <StackPanel>
                        <TextBlock
                            FontSize="28"
                            FontWeight="Bold"
                            Text="💰 Dépenses" />
                        <TextBlock
                            FontSize="14"
                            Foreground="#6B7280"
                            Text="Suivi des dépenses par dossier" />
                    </StackPanel>

                    <Button
                        Padding="20,12"
                        HorizontalAlignment="Right"
                        Command="{Binding AddCommand}"
                        Content="+ Nouvelle Dépense"
                        Style="{StaticResource PrimaryButton}" />
                </Grid>

                <!--  Statistics Cards  -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Total Expenses  -->
                    <Border
                        Grid.Column="0"
                        Padding="24"
                        Background="#2563EB"
                        CornerRadius="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="White"
                                Opacity="0.9"
                                Text="Total Dépenses" />
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,12,0,0"
                                FontSize="40"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding TotalExpenses, StringFormat='{}{0:N0}'}" />
                            <TextBlock
                                Grid.Row="2"
                                Margin="0,8,0,0"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="28"
                                Foreground="White"
                                Opacity="0.3"
                                Text="&#xE7C3;" />
                        </Grid>
                    </Border>

                    <!--  Paid  -->
                    <Border
                        Grid.Column="2"
                        Padding="24"
                        Background="#10B981"
                        CornerRadius="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="White"
                                Opacity="0.9"
                                Text="Payées" />
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,12,0,0"
                                FontSize="40"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding PaidExpenses, StringFormat='{}{0:N0}'}" />
                            <TextBlock
                                Grid.Row="2"
                                Margin="0,8,0,0"
                                FontSize="28"
                                Foreground="White"
                                Opacity="0.3"
                                Text="✓" />
                        </Grid>
                    </Border>

                    <!--  Unpaid  -->
                    <Border
                        Grid.Column="4"
                        Padding="24"
                        Background="#F59E0B"
                        CornerRadius="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="White"
                                Opacity="0.9"
                                Text="En Attente" />
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,12,0,0"
                                FontSize="40"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding UnpaidExpenses, StringFormat='{}{0:N0}'}" />
                            <TextBlock
                                Grid.Row="2"
                                Margin="0,8,0,0"
                                FontSize="28"
                                Foreground="White"
                                Opacity="0.3"
                                Text="⏳" />
                        </Grid>
                    </Border>

                    <!--  Count  -->
                    <Border
                        Grid.Column="6"
                        Padding="24"
                        Background="#8B5CF6"
                        CornerRadius="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="White"
                                Opacity="0.9"
                                Text="Nombre" />
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,12,0,0"
                                FontSize="40"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding ExpenseCount}" />
                            <TextBlock
                                Grid.Row="2"
                                Margin="0,8,0,0"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="28"
                                Foreground="White"
                                Opacity="0.3"
                                Text="&#xE8EF;" />
                        </Grid>
                    </Border>
                </Grid>

                <!--  Search Bar - FIXED  -->
                <ContentControl Content="{Binding}" ContentTemplate="{StaticResource SearchBarTemplate}" />

                <!--  Expenses List  -->
                <Border
                    Padding="24"
                    Background="White"
                    CornerRadius="12">
                    <ItemsControl ItemsSource="{Binding Items}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="0,0,0,12"
                                    Padding="20"
                                    Background="#F9FAFB"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Icon  -->
                                        <TextBlock
                                            Grid.Column="0"
                                            Margin="0,0,16,0"
                                            FontSize="24"
                                            Text="💰" />

                                        <!--  Info  -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock
                                                FontSize="15"
                                                FontWeight="SemiBold"
                                                Text="{Binding Description}" />
                                            <TextBlock FontSize="13" Foreground="#6B7280">
                                                <Run Text="Dossier:" />
                                                <Run FontWeight="Medium" Text="{Binding Case.Number, Mode=OneWay}" />
                                                <Run Text="•" />
                                                <Run Text="{Binding Date, StringFormat='dd/MM/yyyy'}" />
                                            </TextBlock>
                                        </StackPanel>

                                        <!--  Amount  -->
                                        <TextBlock
                                            Grid.Column="2"
                                            Margin="16,0"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Foreground="#2563EB"
                                            Text="{Binding Amount, StringFormat='{}{0:N2} DA'}" />

                                        <!--  Status Badge  -->
                                        <Border
                                            Grid.Column="3"
                                            Margin="16,0"
                                            Padding="12,6"
                                            VerticalAlignment="Center"
                                            CornerRadius="6">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#FEF3C7" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsPaid}" Value="True">
                                                            <Setter Property="Background" Value="#D1FAE5" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="12" FontWeight="Medium">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="⏳ En Attente" />
                                                        <Setter Property="Foreground" Value="#F59E0B" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsPaid}" Value="True">
                                                                <Setter Property="Text" Value="✓ Payée" />
                                                                <Setter Property="Foreground" Value="#10B981" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>

                                        <!--  Actions  -->
                                        <ContentControl
                                            Grid.Column="4"
                                            Content="{Binding}"
                                            ContentTemplate="{StaticResource ActionButtonsTemplate}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <!--  Pagination - FIXED  -->
                <ContentControl Content="{Binding}" ContentTemplate="{StaticResource PaginationTemplate}" />

                <!--  Empty State - FIXED  -->
                <ContentControl Content="{Binding}" ContentTemplate="{StaticResource EmptyStateTemplate}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>