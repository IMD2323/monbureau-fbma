<Page
    x:Class="MonBureau.UI.Views.Pages.ExpensesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:MonBureau.UI.Converters"
    Background="{StaticResource BackgroundBrush}">

    <Page.Resources>
        <converters:AmountFormatConverter x:Key="AmountFormat" />
        <converters:DateFormatConverter x:Key="DateFormat" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVis" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Loading Overlay  -->
        <ContentControl
            Grid.RowSpan="2"
            Panel.ZIndex="999"
            Content="{Binding}"
            ContentTemplate="{StaticResource LoadingOverlayTemplate}" />

        <!--  Main Content  -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="32">
                <!--  Header  -->
                <Grid Margin="0,0,0,32">
                    <StackPanel>
                        <TextBlock
                            FontSize="28"
                            FontWeight="Bold"
                            Foreground="{StaticResource TextPrimaryBrush}"
                            Text="💰 Dépenses" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="14"
                            Foreground="{StaticResource TextSecondaryBrush}"
                            Text="Suivi des dépenses par dossier" />
                    </StackPanel>

                    <Button
                        Padding="20,12"
                        HorizontalAlignment="Right"
                        Command="{Binding AddCommand}"
                        Style="{StaticResource PrimaryButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,8,0"
                                FontFamily="{StaticResource IconFont}"
                                Text="&#xE710;" />
                            <TextBlock Text="Nouvelle Dépense" />
                        </StackPanel>
                    </Button>
                </Grid>

                <!--  Statistics Cards  -->
                <Grid Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Total Expenses  -->
                    <Border
                        Grid.Column="0"
                        Padding="24"
                        Background="#2563EB"
                        CornerRadius="16">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="16"
                                Opacity="0.15"
                                ShadowDepth="4"
                                Color="#000000" />
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="White"
                                Opacity="0.9"
                                Text="Total Dépenses" />
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,12,0,0"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding TotalExpenses, StringFormat='{}{0:N2} DA'}" />
                            <TextBlock
                                Grid.Row="2"
                                Margin="0,8,0,0"
                                FontFamily="{StaticResource IconFont}"
                                FontSize="24"
                                Foreground="White"
                                Opacity="0.3"
                                Text="&#xE7C3;" />
                        </Grid>
                    </Border>

                    <!--  Paid  -->
                    <Border
                        Grid.Column="2"
                        Padding="24"
                        Background="#10B981"
                        CornerRadius="16">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="16"
                                Opacity="0.15"
                                ShadowDepth="4"
                                Color="#000000" />
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="White"
                                Opacity="0.9"
                                Text="Payées" />
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,12,0,0"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding PaidExpenses, StringFormat='{}{0:N2} DA'}" />
                            <TextBlock
                                Grid.Row="2"
                                Margin="0,8,0,0"
                                FontSize="28"
                                Foreground="White"
                                Opacity="0.3"
                                Text="✓" />
                        </Grid>
                    </Border>

                    <!--  Unpaid  -->
                    <Border
                        Grid.Column="4"
                        Padding="24"
                        Background="#F59E0B"
                        CornerRadius="16">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="16"
                                Opacity="0.15"
                                ShadowDepth="4"
                                Color="#000000" />
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="White"
                                Opacity="0.9"
                                Text="En Attente" />
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,12,0,0"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding UnpaidExpenses, StringFormat='{}{0:N2} DA'}" />
                            <TextBlock
                                Grid.Row="2"
                                Margin="0,8,0,0"
                                FontSize="28"
                                Foreground="White"
                                Opacity="0.3"
                                Text="⏳" />
                        </Grid>
                    </Border>

                    <!--  Count  -->
                    <Border
                        Grid.Column="6"
                        Padding="24"
                        Background="#8B5CF6"
                        CornerRadius="16">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="16"
                                Opacity="0.15"
                                ShadowDepth="4"
                                Color="#000000" />
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="White"
                                Opacity="0.9"
                                Text="Nombre" />
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,12,0,0"
                                FontSize="36"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding ExpenseCount}" />
                            <TextBlock
                                Grid.Row="2"
                                Margin="0,8,0,0"
                                FontFamily="{StaticResource IconFont}"
                                FontSize="24"
                                Foreground="White"
                                Opacity="0.3"
                                Text="&#xE8EF;" />
                        </Grid>
                    </Border>
                </Grid>

                <!--  Search and Filter  -->
                <Border
                    Margin="0,0,0,24"
                    Padding="0"
                    Background="White"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Search Box  -->
                        <Grid Grid.Column="0">
                            <TextBox
                                Padding="16,12,40,12"
                                BorderThickness="0"
                                FontSize="14"
                                Text="{Binding SearchFilter, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.Style>
                                    <Style BasedOn="{StaticResource ModernTextBox}" TargetType="TextBox">
                                        <Setter Property="Background" Value="Transparent" />
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <!--  Search Icon  -->
                            <TextBlock
                                Margin="16,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource IconFont}"
                                FontSize="16"
                                Foreground="{StaticResource TextTertiaryBrush}"
                                IsHitTestVisible="False"
                                Text="&#xE721;" />

                            <!--  Placeholder  -->
                            <TextBlock
                                Margin="16,0,40,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{StaticResource TextTertiaryBrush}"
                                IsHitTestVisible="False"
                                Text="Rechercher par description, dossier ou client...">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SearchFilter}" Value="">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <!--  Filter Button  -->
                        <Button
                            Grid.Column="1"
                            Padding="16,12"
                            Style="{StaticResource IconButton}"
                            ToolTip="Filtrer">
                            <TextBlock
                                FontFamily="{StaticResource IconFont}"
                                FontSize="16"
                                Text="&#xE71C;" />
                        </Button>

                        <!--  Refresh Button  -->
                        <Button
                            Grid.Column="2"
                            Padding="16,12"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource IconButton}"
                            ToolTip="Actualiser">
                            <TextBlock
                                FontFamily="{StaticResource IconFont}"
                                FontSize="16"
                                Text="&#xE72C;" />
                        </Button>
                    </Grid>
                </Border>

                <!--  Expenses List  -->
                <Border
                    Padding="24"
                    Background="White"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Visibility="{Binding Items.Count, Converter={StaticResource BoolToVis}}">
                    <ItemsControl ItemsSource="{Binding Items}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="0,0,0,12"
                                    Padding="20"
                                    Background="{StaticResource Gray50Brush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Icon  -->
                                        <Border
                                            Grid.Column="0"
                                            Width="50"
                                            Height="50"
                                            Margin="0,0,16,0"
                                            Background="{StaticResource PrimarySubtleBrush}"
                                            CornerRadius="25">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="24"
                                                Text="💰" />
                                        </Border>

                                        <!--  Info  -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock
                                                FontSize="15"
                                                FontWeight="SemiBold"
                                                Foreground="{StaticResource TextPrimaryBrush}"
                                                Text="{Binding Description}"
                                                TextTrimming="CharacterEllipsis" />
                                            <StackPanel Margin="0,4,0,0" Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="0,0,16,0"
                                                    FontSize="13"
                                                    Foreground="{StaticResource TextSecondaryBrush}">
                                                    <Run Text="Dossier:" />
                                                    <Run FontWeight="Medium" Text="{Binding Case.Number, Mode=OneWay}" />
                                                </TextBlock>
                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="{StaticResource TextTertiaryBrush}"
                                                    Text="{Binding Date, Converter={StaticResource DateFormat}, ConverterParameter='dd/MM/yyyy'}" />
                                            </StackPanel>
                                            <TextBlock
                                                Margin="0,4,0,0"
                                                FontSize="12"
                                                Foreground="{StaticResource TextTertiaryBrush}">
                                                <Run Text="Client:" />
                                                <Run Text="{Binding Case.Client.FullName, Mode=OneWay}" />
                                            </TextBlock>
                                        </StackPanel>

                                        <!--  Amount  -->
                                        <Border
                                            Grid.Column="2"
                                            Margin="16,0"
                                            Padding="12,6"
                                            VerticalAlignment="Center"
                                            Background="{StaticResource PrimarySubtleBrush}"
                                            CornerRadius="6">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Foreground="{StaticResource PrimaryBrush}"
                                                Text="{Binding Amount, StringFormat='{}{0:N2} DA'}" />
                                        </Border>

                                        <!--  Status Badge  -->
                                        <Border
                                            Grid.Column="3"
                                            Margin="16,0"
                                            Padding="12,6"
                                            VerticalAlignment="Center"
                                            CornerRadius="6">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="{StaticResource WarningSubtleBrush}" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsPaid}" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource SuccessSubtleBrush}" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="12" FontWeight="Medium">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="⏳ En Attente" />
                                                        <Setter Property="Foreground" Value="{StaticResource WarningBrush}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsPaid}" Value="True">
                                                                <Setter Property="Text" Value="✓ Payée" />
                                                                <Setter Property="Foreground" Value="{StaticResource SuccessBrush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>

                                        <!--  Actions  -->
                                        <StackPanel
                                            Grid.Column="4"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Button
                                                Margin="4,0"
                                                Padding="10"
                                                Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource IconButton}"
                                                ToolTip="Modifier">
                                                <TextBlock
                                                    FontFamily="{StaticResource IconFont}"
                                                    FontSize="16"
                                                    Foreground="{StaticResource PrimaryBrush}"
                                                    Text="&#xE70F;" />
                                            </Button>
                                            <Button
                                                Margin="4,0"
                                                Padding="10"
                                                Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource IconButton}"
                                                ToolTip="Supprimer">
                                                <TextBlock
                                                    FontFamily="{StaticResource IconFont}"
                                                    FontSize="16"
                                                    Foreground="{StaticResource ErrorBrush}"
                                                    Text="&#xE74D;" />
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <!--  Empty State  -->
                <Border
                    Padding="60"
                    Background="White"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Visibility="{Binding Items.Count, Converter={StaticResource InverseBoolToVis}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="64"
                            Opacity="0.3"
                            Text="💰" />
                        <TextBlock
                            Margin="0,16,0,8"
                            HorizontalAlignment="Center"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource TextPrimaryBrush}"
                            Text="Aucune dépense enregistrée" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="14"
                            Foreground="{StaticResource TextSecondaryBrush}"
                            Text="Commencez par ajouter votre première dépense" />
                        <Button
                            Margin="0,24,0,0"
                            Padding="20,12"
                            Command="{Binding AddCommand}"
                            Style="{StaticResource PrimaryButton}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,8,0"
                                    FontFamily="{StaticResource IconFont}"
                                    Text="&#xE710;" />
                                <TextBlock Text="Ajouter une Dépense" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!--  Pagination  -->
                <Border
                    Margin="0,16,0,0"
                    Padding="16"
                    HorizontalAlignment="Center"
                    Background="White"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Visibility="{Binding Items.Count, Converter={StaticResource BoolToVis}}">
                    <StackPanel Orientation="Horizontal">
                        <Button
                            Padding="12,8"
                            Command="{Binding PreviousPageCommand}"
                            IsEnabled="{Binding CurrentPage, Converter={StaticResource GreaterThanOne}}"
                            Style="{StaticResource OutlineButton}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,8,0"
                                    FontFamily="{StaticResource IconFont}"
                                    Text="&#xE76B;" />
                                <TextBlock Text="Précédent" />
                            </StackPanel>
                        </Button>

                        <Border
                            Margin="12,0"
                            Padding="16,8"
                            Background="{StaticResource PrimarySubtleBrush}"
                            CornerRadius="6">
                            <TextBlock
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="{StaticResource PrimaryBrush}">
                                <Run Text="Page" />
                                <Run FontWeight="Bold" Text="{Binding CurrentPage, Mode=OneWay}" />
                                <Run Text="/" />
                                <Run Text="{Binding TotalPages, Mode=OneWay}" />
                            </TextBlock>
                        </Border>

                        <Button Padding="12,8" Command="{Binding NextPageCommand}">
                            <Button.Style>
                                <Style BasedOn="{StaticResource OutlineButton}" TargetType="Button">
                                    <Style.Triggers>
                                        <DataTrigger Value="False">
                                            <DataTrigger.Binding>
                                                <MultiBinding Converter="{StaticResource LessThanConverter}">
                                                    <Binding Path="CurrentPage" />
                                                    <Binding Path="TotalPages" />
                                                </MultiBinding>
                                            </DataTrigger.Binding>
                                            <Setter Property="IsEnabled" Value="False" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Suivant" />
                                <TextBlock
                                    Margin="8,0,0,0"
                                    FontFamily="{StaticResource IconFont}"
                                    Text="&#xE76C;" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!--  Status Bar  -->
        <Border
            Grid.Row="1"
            Padding="16,12"
            Background="{StaticResource Gray50Brush}"
            BorderBrush="{StaticResource DividerBrush}"
            BorderThickness="0,1,0,0">
            <Grid>
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="13"
                    Foreground="{StaticResource TextSecondaryBrush}"
                    Text="{Binding StatusMessage}" />

                <TextBlock
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="{StaticResource TextTertiaryBrush}">
                    <Run Text="Affichage de" />
                    <Run FontWeight="Medium" Text="{Binding Items.Count, Mode=OneWay}" />
                    <Run Text="sur" />
                    <Run FontWeight="Medium" Text="{Binding TotalItems, Mode=OneWay}" />
                    <Run Text="dépenses" />
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Page>