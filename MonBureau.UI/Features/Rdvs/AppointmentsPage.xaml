<!--  AppointmentsPage.xaml - FIXED: Removed incorrect Template binding  -->
<Page
    x:Class="MonBureau.UI.Features.Rdvs.AppointmentsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:MonBureau.UI.Converters"
    Background="{StaticResource BackgroundBrush}">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVis" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis" />
    </Page.Resources>

    <Grid>
        <!--  FIXED: Loading Overlay - Using proper ContentControl with ContentTemplate  -->
        <ContentControl
            Panel.ZIndex="999"
            Content="{Binding}"
            ContentTemplate="{StaticResource LoadingOverlayTemplate}"
            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}" />

        <!--  Main Content  -->
        <ScrollViewer
            Padding="30"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!--  Header  -->
                <Grid Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock
                            FontSize="28"
                            FontWeight="Bold"
                            Foreground="{StaticResource TextPrimaryBrush}"
                            Text="📅 Rendez-vous" />
                        <TextBlock
                            FontSize="14"
                            Foreground="{StaticResource TextSecondaryBrush}"
                            Text="Gestion des rendez-vous et audiences" />
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <!--  View Mode Toggle  -->
                        <StackPanel Margin="0,0,16,0" Orientation="Horizontal">
                            <Button
                                Padding="12,8"
                                Command="{Binding ChangeViewModeCommand}"
                                CommandParameter="List"
                                Style="{StaticResource OutlineButton}">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8FD;" />
                            </Button>
                            <Button
                                Margin="4,0,0,0"
                                Padding="12,8"
                                Command="{Binding ChangeViewModeCommand}"
                                CommandParameter="Calendar"
                                Style="{StaticResource OutlineButton}">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE787;" />
                            </Button>
                        </StackPanel>

                        <Button
                            Padding="20,12"
                            Command="{Binding AddCommand}"
                            Style="{StaticResource PrimaryButton}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,8,0"
                                    FontFamily="Segoe MDL2 Assets"
                                    Text="&#xE710;" />
                                <TextBlock Text="Nouveau RDV" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!--  Quick View: Today & Upcoming  -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Today's Appointments  -->
                    <Border
                        Grid.Column="0"
                        Padding="24"
                        Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="12">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <TextBlock
                                    FontSize="18"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource TextPrimaryBrush}"
                                    Text="📅 Aujourd'hui" />
                                <Border
                                    Padding="8,4"
                                    HorizontalAlignment="Right"
                                    Background="{StaticResource PrimarySubtleBrush}"
                                    CornerRadius="12">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Bold"
                                        Foreground="{StaticResource PrimaryBrush}"
                                        Text="{Binding TodayCount}" />
                                </Border>
                            </Grid>

                            <ItemsControl MaxHeight="400" ItemsSource="{Binding TodayAppointments}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="0,0,0,12"
                                            Padding="16"
                                            Background="{StaticResource BackgroundBrush}"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Cursor="Hand">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <!--  Time  -->
                                                <StackPanel
                                                    Grid.Column="0"
                                                    Margin="0,0,12,0"
                                                    VerticalAlignment="Top">
                                                    <TextBlock
                                                        FontSize="18"
                                                        FontWeight="Bold"
                                                        Foreground="{StaticResource PrimaryBrush}"
                                                        Text="{Binding StartTime, StringFormat='HH:mm'}" />
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="{StaticResource TextTertiaryBrush}"
                                                        Text="{Binding EndTime, StringFormat='HH:mm'}" />
                                                </StackPanel>

                                                <!--  Info  -->
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Foreground="{StaticResource TextPrimaryBrush}"
                                                        Text="{Binding Title}"
                                                        TextTrimming="CharacterEllipsis" />
                                                    <TextBlock
                                                        Margin="0,4,0,0"
                                                        FontSize="12"
                                                        Foreground="{StaticResource TextSecondaryBrush}"
                                                        Text="{Binding Location}"
                                                        TextTrimming="CharacterEllipsis" />
                                                    <TextBlock
                                                        Margin="0,4,0,0"
                                                        FontSize="12"
                                                        Foreground="{StaticResource TextTertiaryBrush}">
                                                        <Run Text="Dossier:" />
                                                        <Run FontWeight="Medium" Text="{Binding Case.Number, Mode=OneWay}" />
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!--  Empty State  -->
                            <StackPanel
                                Margin="0,40,0,40"
                                HorizontalAlignment="Center"
                                Visibility="{Binding TodayCount, Converter={StaticResource InverseBoolToVis}}">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="32"
                                    Opacity="0.3"
                                    Text="✓" />
                                <TextBlock
                                    Margin="0,8,0,0"
                                    HorizontalAlignment="Center"
                                    FontSize="13"
                                    Foreground="{StaticResource TextSecondaryBrush}"
                                    Text="Aucun rendez-vous aujourd'hui" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Upcoming Appointments  -->
                    <Border
                        Grid.Column="2"
                        Padding="24"
                        Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="12">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <TextBlock
                                    FontSize="18"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource TextPrimaryBrush}"
                                    Text="📆 Prochains 7 Jours" />
                                <Border
                                    Padding="8,4"
                                    HorizontalAlignment="Right"
                                    Background="{StaticResource SecondarySubtleBrush}"
                                    CornerRadius="12">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Bold"
                                        Foreground="{StaticResource SecondaryBrush}"
                                        Text="{Binding UpcomingCount}" />
                                </Border>
                            </Grid>

                            <ItemsControl MaxHeight="400" ItemsSource="{Binding UpcomingAppointments}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="0,0,0,12"
                                            Padding="16"
                                            Background="{StaticResource BackgroundBrush}"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Cursor="Hand">
                                            <Grid>
                                                <StackPanel>
                                                    <Grid>
                                                        <TextBlock
                                                            FontSize="14"
                                                            FontWeight="SemiBold"
                                                            Foreground="{StaticResource TextPrimaryBrush}"
                                                            Text="{Binding Title}"
                                                            TextTrimming="CharacterEllipsis" />
                                                        <TextBlock
                                                            HorizontalAlignment="Right"
                                                            FontSize="12"
                                                            FontWeight="Medium"
                                                            Foreground="{StaticResource SecondaryBrush}"
                                                            Text="{Binding StartTime, StringFormat='dd/MM'}" />
                                                    </Grid>
                                                    <TextBlock
                                                        Margin="0,4,0,0"
                                                        FontSize="12"
                                                        Foreground="{StaticResource TextSecondaryBrush}">
                                                        <Run Text="⏰" />
                                                        <Run Text="{Binding StartTime, StringFormat='HH:mm'}" />
                                                        <Run Text="📍" />
                                                        <Run Text="{Binding Location}" />
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!--  Empty State  -->
                            <StackPanel
                                Margin="0,40,0,40"
                                HorizontalAlignment="Center"
                                Visibility="{Binding UpcomingCount, Converter={StaticResource InverseBoolToVis}}">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="32"
                                    Opacity="0.3"
                                    Text="📅" />
                                <TextBlock
                                    Margin="0,8,0,0"
                                    HorizontalAlignment="Center"
                                    FontSize="13"
                                    Foreground="{StaticResource TextSecondaryBrush}"
                                    Text="Aucun rendez-vous à venir" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>

                <!--  Search Bar  -->
                <ContentControl Content="{Binding}" ContentTemplate="{StaticResource SearchBarTemplate}" />

                <!--  All Appointments List  -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,20"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Text="Tous les Rendez-vous" />

                        <ItemsControl ItemsSource="{Binding Items}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,0,0,12"
                                        Padding="20"
                                        Background="{StaticResource BackgroundBrush}"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!--  Icon & Time  -->
                                            <Border
                                                Grid.Column="0"
                                                Width="80"
                                                Height="80"
                                                Margin="0,0,20,0"
                                                Background="{StaticResource PrimarySubtleBrush}"
                                                CornerRadius="12">
                                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        FontSize="24"
                                                        FontWeight="Bold"
                                                        Foreground="{StaticResource PrimaryBrush}"
                                                        Text="{Binding StartTime, StringFormat='dd'}" />
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        FontSize="12"
                                                        Foreground="{StaticResource PrimaryBrush}"
                                                        Text="{Binding StartTime, StringFormat='MMM'}" />
                                                </StackPanel>
                                            </Border>

                                            <!--  Info  -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock
                                                    FontSize="16"
                                                    FontWeight="SemiBold"
                                                    Foreground="{StaticResource TextPrimaryBrush}"
                                                    Text="{Binding Title}" />
                                                <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                                                    <TextBlock
                                                        Margin="0,0,20,0"
                                                        FontSize="13"
                                                        Foreground="{StaticResource TextSecondaryBrush}">
                                                        <Run Text="⏰" />
                                                        <Run FontWeight="Medium" Text="{Binding StartTime, StringFormat='HH:mm'}" />
                                                        <Run Text="-" />
                                                        <Run Text="{Binding EndTime, StringFormat='HH:mm'}" />
                                                    </TextBlock>
                                                    <TextBlock
                                                        Margin="0,0,20,0"
                                                        FontSize="13"
                                                        Foreground="{StaticResource TextSecondaryBrush}">
                                                        <Run Text="📍" />
                                                        <Run Text="{Binding Location}" />
                                                    </TextBlock>
                                                    <TextBlock FontSize="13" Foreground="{StaticResource TextTertiaryBrush}">
                                                        <Run Text="Dossier:" />
                                                        <Run FontWeight="Medium" Text="{Binding Case.Number, Mode=OneWay}" />
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>

                                            <!--  Status Badge  -->
                                            <Border
                                                Grid.Column="2"
                                                Margin="16,0"
                                                Padding="12,6"
                                                VerticalAlignment="Center"
                                                Background="{StaticResource InfoSubtleBrush}"
                                                CornerRadius="6">
                                                <TextBlock
                                                    FontSize="12"
                                                    FontWeight="Medium"
                                                    Foreground="{StaticResource InfoBrush}"
                                                    Text="{Binding Status}" />
                                            </Border>

                                            <!--  Actions  -->
                                            <StackPanel
                                                Grid.Column="3"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal">
                                                <Button
                                                    Margin="4,0"
                                                    Padding="10"
                                                    Command="{Binding DataContext.MarkAsCompletedCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource IconButton}"
                                                    ToolTip="Marquer comme terminé">
                                                    <TextBlock
                                                        FontFamily="Segoe MDL2 Assets"
                                                        FontSize="16"
                                                        Foreground="{StaticResource SuccessBrush}"
                                                        Text="&#xE73E;" />
                                                </Button>
                                                <ContentControl Content="{Binding}" ContentTemplate="{StaticResource ActionButtonsTemplate}" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!--  Empty State  -->
                        <StackPanel
                            Margin="0,40,0,40"
                            HorizontalAlignment="Center"
                            Visibility="{Binding Items.Count, Converter={StaticResource InverseBoolToVis}}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="48"
                                Opacity="0.3"
                                Text="📅" />
                            <TextBlock
                                Margin="0,12,0,0"
                                HorizontalAlignment="Center"
                                FontSize="14"
                                Foreground="{StaticResource TextSecondaryBrush}"
                                Text="Aucun rendez-vous enregistré" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--  Pagination  -->
                <ContentControl Content="{Binding}" ContentTemplate="{StaticResource PaginationTemplate}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>