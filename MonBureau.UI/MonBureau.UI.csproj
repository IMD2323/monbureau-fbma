<Project Sdk="Microsoft.NET.Sdk">

	<ItemGroup>
		<Compile Remove="Scripts\**" />
		<EmbeddedResource Remove="Scripts\**" />
		<None Remove="Scripts\**" />
		<Page Remove="Scripts\**" />
	</ItemGroup>

	<ItemGroup>
		<None Remove="Config\monbureau-licenses-firebase-adminsdk.json" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\MonBureau.Core\MonBureau.Core.csproj" />
		<ProjectReference Include="..\MonBureau.Infrastructure\MonBureau.Infrastructure.csproj" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.2" />
		<!-- FIXED: Use 8.0.11 instead of 10.0.1 -->
