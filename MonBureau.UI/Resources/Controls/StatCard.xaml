<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  ============================================================================  -->
    <!--  Reusable Stat Card Component  -->
    <!--  Usage: <ContentControl Style="{StaticResource StatCard}" Tag="color" />  -->
    <!--  ============================================================================  -->

    <Style x:Key="StatCard" TargetType="ContentControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Border
                        Padding="24"
                        Background="{TemplateBinding Tag}"
                        CornerRadius="16">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="16"
                                Opacity="0.15"
                                ShadowDepth="4"
                                Color="#000000" />
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Label  -->
                            <TextBlock
                                Grid.Row="0"
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="White"
                                Opacity="0.9"
                                Text="{Binding Label}" />

                            <!--  Value  -->
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,12,0,0"
                                FontSize="40"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding Value}" />

                            <!--  Icon  -->
                            <TextBlock
                                Grid.Row="2"
                                Margin="0,8,0,0"
                                FontFamily="{StaticResource IconFont}"
                                FontSize="28"
                                Foreground="White"
                                Opacity="0.3"
                                Text="{Binding Icon}" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>