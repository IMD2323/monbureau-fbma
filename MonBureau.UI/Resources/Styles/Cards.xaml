<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  ============================================================================  -->
    <!--  CARD COMPONENTS  -->
    <!--  ============================================================================  -->

    <!--  Base Card (Elevated)  -->
    <Style x:Key="Card" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="24" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="12"
                    Opacity="0.08"
                    ShadowDepth="2"
                    Color="#000000" />
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Outlined Card  -->
    <Style x:Key="CardOutlined" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="24" />
    </Style>

    <!--  Interactive Card (Hoverable)  -->
    <Style x:Key="CardInteractive" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Cursor" Value="Hand" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource SurfaceHoverBrush}" />
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect
                            BlurRadius="16"
                            Opacity="0.12"
                            ShadowDepth="4"
                            Color="#000000" />
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--  Stat Card (For dashboard metrics)  -->
    <Style x:Key="StatCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Padding" Value="24" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="16"
                    Opacity="0.15"
                    ShadowDepth="4"
                    Color="#000000" />
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>