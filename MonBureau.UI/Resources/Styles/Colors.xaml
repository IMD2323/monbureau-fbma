<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  ============================================================================  -->
    <!--  MODERN COLOR SYSTEM - Material Design Inspired  -->
    <!--  ============================================================================  -->

    <!--  Primary Colors  -->
    <Color x:Key="Primary">#2563EB</Color>
    <Color x:Key="PrimaryDark">#1E40AF</Color>
    <Color x:Key="PrimaryLight">#3B82F6</Color>
    <Color x:Key="PrimaryLighter">#60A5FA</Color>
    <Color x:Key="PrimarySubtle">#DBEAFE</Color>

    <!--  Secondary Colors  -->
    <Color x:Key="Secondary">#8B5CF6</Color>
    <Color x:Key="SecondaryDark">#7C3AED</Color>
    <Color x:Key="SecondaryLight">#A78BFA</Color>
    <Color x:Key="SecondarySubtle">#EDE9FE</Color>

    <!--  Semantic Colors  -->
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="SuccessLight">#34D399</Color>
    <Color x:Key="SuccessSubtle">#D1FAE5</Color>

    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="WarningLight">#FBBF24</Color>
    <Color x:Key="WarningSubtle">#FEF3C7</Color>

    <Color x:Key="Error">#EF4444</Color>
    <Color x:Key="ErrorLight">#F87171</Color>
    <Color x:Key="ErrorSubtle">#FEE2E2</Color>

    <Color x:Key="Info">#06B6D4</Color>
    <Color x:Key="InfoLight">#22D3EE</Color>
    <Color x:Key="InfoSubtle">#CFFAFE</Color>

    <!--  Neutral Palette  -->
    <Color x:Key="Gray50">#F9FAFB</Color>
    <Color x:Key="Gray100">#F3F4F6</Color>
    <Color x:Key="Gray200">#E5E7EB</Color>
    <Color x:Key="Gray300">#D1D5DB</Color>
    <Color x:Key="Gray400">#9CA3AF</Color>
    <Color x:Key="Gray500">#6B7280</Color>
    <Color x:Key="Gray600">#4B5563</Color>
    <Color x:Key="Gray700">#374151</Color>
    <Color x:Key="Gray800">#1F2937</Color>
    <Color x:Key="Gray900">#111827</Color>

    <!--  Background Colors  -->
    <Color x:Key="Background">#FFFFFF</Color>
    <Color x:Key="BackgroundSecondary">#F9FAFB</Color>
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="SurfaceHover">#F9FAFB</Color>

    <!--  Text Colors  -->
    <Color x:Key="TextPrimary">#111827</Color>
    <Color x:Key="TextSecondary">#6B7280</Color>
    <Color x:Key="TextTertiary">#9CA3AF</Color>
    <Color x:Key="TextDisabled">#D1D5DB</Color>
    <Color x:Key="TextOnPrimary">#FFFFFF</Color>

    <!--  Border Colors  -->
    <Color x:Key="Border">#E5E7EB</Color>
    <Color x:Key="BorderHover">#D1D5DB</Color>
    <Color x:Key="BorderFocus">#2563EB</Color>
    <Color x:Key="Divider">#E5E7EB</Color>

    <!--  Overlay Colors  -->
    <Color x:Key="Overlay">#00000080</Color>
    <Color x:Key="OverlayLight">#00000040</Color>

    <!--  Convert to Brushes  -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDark}" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLight}" />
    <SolidColorBrush x:Key="PrimaryLighterBrush" Color="{StaticResource PrimaryLighter}" />
    <SolidColorBrush x:Key="PrimarySubtleBrush" Color="{StaticResource PrimarySubtle}" />

    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}" />
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource SecondaryDark}" />
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="{StaticResource SecondaryLight}" />
    <SolidColorBrush x:Key="SecondarySubtleBrush" Color="{StaticResource SecondarySubtle}" />

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}" />
    <SolidColorBrush x:Key="SuccessLightBrush" Color="{StaticResource SuccessLight}" />
    <SolidColorBrush x:Key="SuccessSubtleBrush" Color="{StaticResource SuccessSubtle}" />

    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}" />
    <SolidColorBrush x:Key="WarningLightBrush" Color="{StaticResource WarningLight}" />
    <SolidColorBrush x:Key="WarningSubtleBrush" Color="{StaticResource WarningSubtle}" />

    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource Error}" />
    <SolidColorBrush x:Key="ErrorLightBrush" Color="{StaticResource ErrorLight}" />
    <SolidColorBrush x:Key="ErrorSubtleBrush" Color="{StaticResource ErrorSubtle}" />

    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource Info}" />
    <SolidColorBrush x:Key="InfoLightBrush" Color="{StaticResource InfoLight}" />
    <SolidColorBrush x:Key="InfoSubtleBrush" Color="{StaticResource InfoSubtle}" />

    <SolidColorBrush x:Key="Gray50Brush" Color="{StaticResource Gray50}" />
    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}" />
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}" />
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}" />
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}" />
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}" />
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}" />
    <SolidColorBrush x:Key="Gray700Brush" Color="{StaticResource Gray700}" />
    <SolidColorBrush x:Key="Gray800Brush" Color="{StaticResource Gray800}" />
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}" />

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}" />
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{StaticResource BackgroundSecondary}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}" />
    <SolidColorBrush x:Key="SurfaceHoverBrush" Color="{StaticResource SurfaceHover}" />

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}" />
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiary}" />
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabled}" />
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource TextOnPrimary}" />

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource Border}" />
    <SolidColorBrush x:Key="BorderHoverBrush" Color="{StaticResource BorderHover}" />
    <SolidColorBrush x:Key="BorderFocusBrush" Color="{StaticResource BorderFocus}" />
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource Divider}" />

    <SolidColorBrush x:Key="OverlayBrush" Color="{StaticResource Overlay}" />
    <SolidColorBrush x:Key="OverlayLightBrush" Color="{StaticResource OverlayLight}" />

    <!--  Legacy Compatibility (keep for now)  -->
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Secondary}" />
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource Gray100}" />

</ResourceDictionary>