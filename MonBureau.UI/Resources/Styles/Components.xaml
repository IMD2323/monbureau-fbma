<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:loc="clr-namespace:MonBureau.UI.Markup">

    <!--  ============================================================================  -->
    <!--  REUSABLE UI COMPONENTS  -->
    <!--  ============================================================================  -->

    <!--  Badge (Status indicator)  -->
    <ControlTemplate x:Key="BadgeTemplate">
        <Border
            Padding="8,4"
            Background="{Binding Background, RelativeSource={RelativeSource AncestorType=ContentControl}}"
            CornerRadius="12">
            <TextBlock
                FontSize="12"
                FontWeight="Medium"
                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                Text="{Binding Content, RelativeSource={RelativeSource AncestorType=ContentControl}}" />
        </Border>
    </ControlTemplate>

    <!--  Divider  -->
    <Style x:Key="Divider" TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource DividerBrush}" />
        <Setter Property="Height" Value="1" />
        <Setter Property="Margin" Value="0,16" />
    </Style>

    <!--  Section Header  -->
    <Style x:Key="SectionHeader" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

    <!--  Page Header Template  -->
    <DataTemplate x:Key="PageHeaderTemplate">
        <Grid Margin="0,0,0,24">
            <StackPanel>
                <TextBlock
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="{StaticResource TextPrimaryBrush}"
                    Text="{Binding Title}" />
                <TextBlock
                    Margin="0,4,0,0"
                    FontSize="14"
                    Foreground="{StaticResource TextSecondaryBrush}"
                    Text="{Binding Subtitle}" />
            </StackPanel>
            <Button
                Padding="20,12"
                HorizontalAlignment="Right"
                Command="{Binding AddCommand}"
                Content="{Binding AddButtonText}"
                Style="{StaticResource PrimaryButton}" />
        </Grid>
    </DataTemplate>

    <!--  Empty State Template  -->
    <DataTemplate x:Key="EmptyStateTemplate">
        <StackPanel
            Margin="0,60,0,60"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                Margin="0,0,0,16"
                HorizontalAlignment="Center"
                FontSize="48"
                Opacity="0.3"
                Text="{Binding EmptyIcon}" />
            <TextBlock
                Margin="0,0,0,8"
                HorizontalAlignment="Center"
                FontSize="18"
                FontWeight="SemiBold"
                Foreground="{StaticResource TextPrimaryBrush}"
                Text="{Binding EmptyTitle}" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="14"
                Foreground="{StaticResource TextSecondaryBrush}"
                Text="{Binding EmptyMessage}"
                TextAlignment="Center"
                TextWrapping="Wrap" />
        </StackPanel>
    </DataTemplate>

    <!--  Loading Spinner  -->
    <ControlTemplate x:Key="LoadingSpinnerTemplate">
        <Grid>
            <Ellipse
                Width="40"
                Height="40"
                Stroke="{StaticResource PrimaryBrush}"
                StrokeThickness="4">
                <Ellipse.Style>
                    <Style TargetType="Ellipse">
                        <Style.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                            From="0"
                                            To="360"
                                            Duration="0:0:1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Style.Triggers>
                    </Style>
                </Ellipse.Style>
                <Ellipse.RenderTransform>
                    <RotateTransform />
                </Ellipse.RenderTransform>
                <Ellipse.RenderTransformOrigin>
                    <Point X="0.5" Y="0.5" />
                </Ellipse.RenderTransformOrigin>
            </Ellipse>
        </Grid>
    </ControlTemplate>

</ResourceDictionary>