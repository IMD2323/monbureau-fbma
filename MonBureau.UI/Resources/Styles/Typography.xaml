<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  ============================================================================  -->
    <!--  TYPOGRAPHY SYSTEM  -->
    <!--  ============================================================================  -->

    <!--  Font Families  -->
    <FontFamily x:Key="FontPrimary">Segoe UI, Roboto, Arial, sans-serif</FontFamily>
    <FontFamily x:Key="FontMono">Consolas, Courier New, monospace</FontFamily>
    <FontFamily x:Key="IconFont">Segoe MDL2 Assets</FontFamily>

    <!--  Heading Styles  -->
    <Style x:Key="Heading1" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="LineHeight" Value="40" />
    </Style>

    <Style x:Key="Heading2" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="LineHeight" Value="36" />
    </Style>

    <Style x:Key="Heading3" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="LineHeight" Value="32" />
    </Style>

    <Style x:Key="Heading4" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="LineHeight" Value="28" />
    </Style>

    <Style x:Key="Heading5" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="LineHeight" Value="26" />
    </Style>

    <Style x:Key="Heading6" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="LineHeight" Value="24" />
    </Style>

    <!--  Body Styles  -->
    <Style x:Key="BodyLarge" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="LineHeight" Value="24" />
    </Style>

    <Style x:Key="Body" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="LineHeight" Value="20" />
    </Style>

    <Style x:Key="BodySmall" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
        <Setter Property="LineHeight" Value="18" />
    </Style>

    <!--  Caption Styles  -->
    <Style x:Key="Caption" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
        <Setter Property="LineHeight" Value="16" />
    </Style>

    <Style x:Key="CaptionSmall" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{StaticResource TextTertiaryBrush}" />
        <Setter Property="LineHeight" Value="14" />
    </Style>

    <!--  Label Styles  -->
    <Style x:Key="Label" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="LineHeight" Value="18" />
    </Style>

    <Style x:Key="LabelSmall" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="LineHeight" Value="16" />
    </Style>

    <!--  Overline Style (Uppercase labels)  -->
    <Style x:Key="Overline" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
        <Setter Property="LineHeight" Value="14" />
        <!--  Note: Use Typography.Capitals="AllSmallCaps" for uppercase effect if needed  -->
    </Style>

    <!--  Code Style  -->
    <Style x:Key="Code" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontMono}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="Background" Value="{StaticResource Gray100Brush}" />
        <Setter Property="Padding" Value="4,2" />
    </Style>

</ResourceDictionary>