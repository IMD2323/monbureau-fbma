<Window
    x:Class="YourApp.Dialogs.BackupPasswordDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Backup Password"
    Width="450"
    Height="300"
    Background="#F5F5F5"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,5,0,5" />
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="8" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,5,0,5" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,10"
            FontSize="18"
            FontWeight="Bold"
            Text="Secure Backup Password" />

        <TextBlock
            Grid.Row="1"
            Margin="0,0,0,15"
            Foreground="#666"
            Text="Enter a strong password to encrypt your backup. You will need this password to restore the backup."
            TextWrapping="Wrap" />

        <!--  Password  -->
        <Label
            Grid.Row="2"
            Content="Password:"
            FontWeight="SemiBold" />
        <PasswordBox
            x:Name="PasswordBox"
            Grid.Row="3"
            PasswordChanged="PasswordBox_PasswordChanged" />

        <!--  Confirm Password  -->
        <Label
            Grid.Row="4"
            Margin="0,10,0,0"
            Content="Confirm Password:"
            FontWeight="SemiBold" />
        <PasswordBox
            x:Name="ConfirmPasswordBox"
            Grid.Row="5"
            Margin="0,5,0,0"
            PasswordChanged="PasswordBox_PasswordChanged" />

        <!--  Password strength indicator  -->
        <StackPanel
            Grid.Row="5"
            Margin="0,5,0,10"
            VerticalAlignment="Bottom">
            <TextBlock
                x:Name="StrengthText"
                FontSize="12"
                Foreground="#999" />
            <ProgressBar
                x:Name="StrengthBar"
                Height="4"
                Margin="0,3,0,0"
                Maximum="100"
                Minimum="0" />
        </StackPanel>

        <!--  Buttons  -->
        <StackPanel
            Grid.Row="6"
            Margin="0,15,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="100"
                Margin="0,0,10,0"
                Background="White"
                BorderBrush="#CCC"
                Click="Cancel_Click"
                Content="Cancel" />
            <Button
                x:Name="OkButton"
                Width="100"
                Background="#007ACC"
                BorderThickness="0"
                Click="Ok_Click"
                Content="OK"
                Foreground="White"
                IsEnabled="False" />
        </StackPanel>
    </Grid>
</Window>