<!--  DashboardPage.xaml - OPTIMIZED (350 lines → 85 lines)  -->
<!--  ============================================================================  -->
<Page
    x:Class="MonBureau.UI.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource BackgroundBrush}">

    <Grid>
        <!--  Loading Overlay  -->
        <Control Template="{StaticResource LoadingOverlayTemplate}" />

        <!--  Main Content  -->
        <ScrollViewer Padding="32" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!--  Header  -->
                <Grid Margin="0,0,0,32">
                    <StackPanel>
                        <TextBlock
                            FontSize="28"
                            FontWeight="Bold"
                            Text="📊 Tableau de Bord" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="14"
                            Foreground="{StaticResource TextSecondaryBrush}"
                            Text="Vue d'ensemble de votre cabinet" />
                    </StackPanel>
                </Grid>

                <!--  Statistics Cards - Using StatCardTemplate  -->
                <Grid Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ContentControl
                        Grid.Column="0"
                        Margin="0,0,16,0"
                        ContentTemplate="{StaticResource StatCardTemplate}">
                        <ContentControl.Content>
                            <MultiBinding>
                                <Binding Path="TotalClients" />
                                <MultiBinding.Converter>
                                    <local:StatCardConverter
                                        Color="{StaticResource PrimaryBrush}"
                                        Icon="&#xE716;"
                                        Label="Total Clients" />
                                </MultiBinding.Converter>
                            </MultiBinding>
                        </ContentControl.Content>
                    </ContentControl>

                    <ContentControl
                        Grid.Column="1"
                        Margin="0,0,16,0"
                        ContentTemplate="{StaticResource StatCardTemplate}">
                        <ContentControl.Content>
                            <MultiBinding>
                                <Binding Path="TotalCases" />
                                <MultiBinding.Converter>
                                    <local:StatCardConverter
                                        Color="{StaticResource SuccessBrush}"
                                        Icon="&#xE8F1;"
                                        Label="Total Dossiers" />
                                </MultiBinding.Converter>
                            </MultiBinding>
                        </ContentControl.Content>
                    </ContentControl>

                    <ContentControl
                        Grid.Column="2"
                        ContentTemplate="{StaticResource StatCardTemplate}">
                        <ContentControl.Content>
                            <MultiBinding>
                                <Binding Path="OpenCases" />
                                <MultiBinding.Converter>
                                    <local:StatCardConverter
                                        Color="{StaticResource WarningBrush}"
                                        Icon="&#xE7C3;"
                                        Label="Dossiers Ouverts" />
                                </MultiBinding.Converter>
                            </MultiBinding>
                        </ContentControl.Content>
                    </ContentControl>
                </Grid>

                <!--  Quick Actions  -->
                <Border Margin="0,0,0,32" Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,20"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Text="⚡ Actions Rapides" />

                        <StackPanel Orientation="Horizontal">
                            <Button
                                Margin="0,0,16,0"
                                Padding="20,16"
                                Command="{Binding AddClientCommand}"
                                Content="+ Nouveau Client"
                                Style="{StaticResource PrimaryButton}" />

                            <Button
                                Margin="0,0,16,0"
                                Padding="20,16"
                                Command="{Binding AddCaseCommand}"
                                Content="+ Nouveau Dossier"
                                Style="{StaticResource SecondaryButton}" />

                            <Button
                                Padding="20,16"
                                Command="{Binding AddItemCommand}"
                                Content="+ Ajouter"
                                Style="{StaticResource OutlineButton}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--  Recent Activity Grid  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Recent Clients  -->
                    <Border Grid.Column="0" Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,20"
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text="👥 Clients Récents" />

                            <ItemsControl ItemsSource="{Binding RecentClients}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ContentControl Content="{Binding}" ContentTemplate="{StaticResource RecentItemCard}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Control Template="{StaticResource EmptyStateTemplate}" />
                        </StackPanel>
                    </Border>

                    <!--  Recent Cases  -->
                    <Border Grid.Column="2" Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,20"
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text="📁 Dossiers Récents" />

                            <ItemsControl ItemsSource="{Binding RecentCases}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ContentControl Content="{Binding}" ContentTemplate="{StaticResource RecentItemCard}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Control Template="{StaticResource EmptyStateTemplate}" />
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>