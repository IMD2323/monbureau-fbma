<!--  ============================================================================  -->
<!--  DashboardPage.xaml - FIXED: Removed StatCardConverter, simplified design  -->
<!--  ============================================================================  -->
<Page
    x:Class="MonBureau.UI.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:MonBureau.UI.Converters"
    Background="{StaticResource BackgroundBrush}">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVis" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis" />
    </Page.Resources>

    <Grid>
        <!--  Loading Overlay  -->
        <Border
            Panel.ZIndex="999"
            Background="#80000000"
            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar
                    Width="200"
                    Height="4"
                    Foreground="#2563EB"
                    IsIndeterminate="True" />
                <TextBlock
                    Margin="0,16,0,0"
                    HorizontalAlignment="Center"
                    FontSize="14"
                    Foreground="White"
                    Text="Chargement..." />
            </StackPanel>
        </Border>

        <!--  Main Content  -->
        <ScrollViewer
            Padding="32"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!--  Header  -->
                <Grid Margin="0,0,0,32">
                    <StackPanel>
                        <TextBlock
                            FontSize="28"
                            FontWeight="Bold"
                            Foreground="#111827"
                            Text="📊 Tableau de Bord" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="14"
                            Foreground="#6B7280"
                            Text="Vue d'ensemble de votre cabinet" />
                    </StackPanel>
                </Grid>

                <!--  Statistics Cards  -->
                <Grid Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Total Clients  -->
                    <Border
                        Grid.Column="0"
                        Padding="24"
                        Background="#2563EB"
                        CornerRadius="16">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="16"
                                Opacity="0.15"
                                ShadowDepth="4"
                                Color="#000000" />
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="White"
                                Opacity="0.9"
                                Text="Total Clients" />

                            <TextBlock
                                Grid.Row="1"
                                Margin="0,12,0,0"
                                FontSize="40"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding TotalClients}" />

                            <TextBlock
                                Grid.Row="2"
                                Margin="0,8,0,0"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="28"
                                Foreground="White"
                                Opacity="0.3"
                                Text="&#xE716;" />
                        </Grid>
                    </Border>

                    <!--  Total Cases  -->
                    <Border
                        Grid.Column="2"
                        Padding="24"
                        Background="#10B981"
                        CornerRadius="16">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="16"
                                Opacity="0.15"
                                ShadowDepth="4"
                                Color="#000000" />
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="White"
                                Opacity="0.9"
                                Text="Total Dossiers" />

                            <TextBlock
                                Grid.Row="1"
                                Margin="0,12,0,0"
                                FontSize="40"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding TotalCases}" />

                            <TextBlock
                                Grid.Row="2"
                                Margin="0,8,0,0"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="28"
                                Foreground="White"
                                Opacity="0.3"
                                Text="&#xE8F1;" />
                        </Grid>
                    </Border>

                    <!--  Open Cases  -->
                    <Border
                        Grid.Column="4"
                        Padding="24"
                        Background="#F59E0B"
                        CornerRadius="16">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="16"
                                Opacity="0.15"
                                ShadowDepth="4"
                                Color="#000000" />
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="White"
                                Opacity="0.9"
                                Text="Dossiers Ouverts" />

                            <TextBlock
                                Grid.Row="1"
                                Margin="0,12,0,0"
                                FontSize="40"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding OpenCases}" />

                            <TextBlock
                                Grid.Row="2"
                                Margin="0,8,0,0"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="28"
                                Foreground="White"
                                Opacity="0.3"
                                Text="&#xE7C3;" />
                        </Grid>
                    </Border>
                </Grid>

                <!--  Quick Actions  -->
                <Border
                    Margin="0,0,0,32"
                    Padding="24"
                    Background="White"
                    CornerRadius="12">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="12"
                            Opacity="0.08"
                            ShadowDepth="2"
                            Color="#000000" />
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,20"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Foreground="#111827"
                            Text="⚡ Actions Rapides" />

                        <StackPanel Orientation="Horizontal">
                            <Button
                                Margin="0,0,16,0"
                                Padding="20,12"
                                Command="{Binding AddClientCommand}"
                                Content="+ Nouveau Client"
                                Style="{StaticResource PrimaryButton}" />

                            <Button
                                Margin="0,0,16,0"
                                Padding="20,12"
                                Command="{Binding AddCaseCommand}"
                                Content="+ Nouveau Dossier"
                                Style="{StaticResource SecondaryButton}" />

                            <Button
                                Padding="20,12"
                                Command="{Binding AddItemCommand}"
                                Content="+ Nouvel Élément"
                                Style="{StaticResource OutlineButton}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--  Recent Activity Grid  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Recent Clients  -->
                    <Border
                        Grid.Column="0"
                        Padding="24"
                        Background="White"
                        CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="12"
                                Opacity="0.08"
                                ShadowDepth="2"
                                Color="#000000" />
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,20"
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="#111827"
                                Text="👥 Clients Récents" />

                            <ItemsControl ItemsSource="{Binding RecentClients}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="0,0,0,12"
                                            Padding="16"
                                            Background="#F9FAFB"
                                            BorderBrush="#E5E7EB"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Cursor="Hand">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Foreground="#111827"
                                                        Text="{Binding FullName}" />
                                                    <TextBlock
                                                        Margin="0,4,0,0"
                                                        FontSize="12"
                                                        Foreground="#6B7280"
                                                        Text="{Binding ContactEmail}" />
                                                </StackPanel>

                                                <StackPanel
                                                    Grid.Column="1"
                                                    VerticalAlignment="Center"
                                                    Orientation="Horizontal">
                                                    <Button
                                                        Margin="4,0"
                                                        Padding="8"
                                                        Command="{Binding DataContext.EditClientCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource IconButton}">
                                                        <TextBlock
                                                            FontFamily="Segoe MDL2 Assets"
                                                            FontSize="14"
                                                            Foreground="#2563EB"
                                                            Text="&#xE70F;" />
                                                    </Button>
                                                    <Button
                                                        Margin="4,0"
                                                        Padding="8"
                                                        Command="{Binding DataContext.DeleteClientCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource IconButton}">
                                                        <TextBlock
                                                            FontFamily="Segoe MDL2 Assets"
                                                            FontSize="14"
                                                            Foreground="#EF4444"
                                                            Text="&#xE74D;" />
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!--  Empty State  -->
                            <StackPanel
                                Margin="0,40,0,40"
                                HorizontalAlignment="Center"
                                Visibility="{Binding RecentClients.Count, Converter={StaticResource InverseBoolToVis}}">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="48"
                                    Opacity="0.3"
                                    Text="👥" />
                                <TextBlock
                                    Margin="0,12,0,0"
                                    HorizontalAlignment="Center"
                                    FontSize="14"
                                    Foreground="#6B7280"
                                    Text="Aucun client récent" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Recent Cases  -->
                    <Border
                        Grid.Column="2"
                        Padding="24"
                        Background="White"
                        CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="12"
                                Opacity="0.08"
                                ShadowDepth="2"
                                Color="#000000" />
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,20"
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="#111827"
                                Text="📁 Dossiers Récents" />

                            <ItemsControl ItemsSource="{Binding RecentCases}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="0,0,0,12"
                                            Padding="16"
                                            Background="#F9FAFB"
                                            BorderBrush="#E5E7EB"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Cursor="Hand">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock
                                                        FontSize="12"
                                                        FontWeight="Medium"
                                                        Foreground="#2563EB"
                                                        Text="{Binding Number}" />
                                                    <TextBlock
                                                        Margin="0,4,0,0"
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Foreground="#111827"
                                                        Text="{Binding Title}" />
                                                    <TextBlock
                                                        Margin="0,4,0,0"
                                                        FontSize="12"
                                                        Foreground="#6B7280"
                                                        Text="{Binding Client.FullName}" />
                                                </StackPanel>

                                                <StackPanel
                                                    Grid.Column="1"
                                                    VerticalAlignment="Center"
                                                    Orientation="Horizontal">
                                                    <Button
                                                        Margin="4,0"
                                                        Padding="8"
                                                        Command="{Binding DataContext.EditCaseCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource IconButton}">
                                                        <TextBlock
                                                            FontFamily="Segoe MDL2 Assets"
                                                            FontSize="14"
                                                            Foreground="#2563EB"
                                                            Text="&#xE70F;" />
                                                    </Button>
                                                    <Button
                                                        Margin="4,0"
                                                        Padding="8"
                                                        Command="{Binding DataContext.DeleteCaseCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource IconButton}">
                                                        <TextBlock
                                                            FontFamily="Segoe MDL2 Assets"
                                                            FontSize="14"
                                                            Foreground="#EF4444"
                                                            Text="&#xE74D;" />
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!--  Empty State  -->
                            <StackPanel
                                Margin="0,40,0,40"
                                HorizontalAlignment="Center"
                                Visibility="{Binding RecentCases.Count, Converter={StaticResource InverseBoolToVis}}">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="48"
                                    Opacity="0.3"
                                    Text="📁" />
                                <TextBlock
                                    Margin="0,12,0,0"
                                    HorizontalAlignment="Center"
                                    FontSize="14"
                                    Foreground="#6B7280"
                                    Text="Aucun dossier récent" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>