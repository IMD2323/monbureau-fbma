<Window
    x:Class="MonBureau.UI.Views.StartupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MonBureau - Démarrage"
    Width="700"
    Height="500"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Border Background="{StaticResource PrimaryBrush}" CornerRadius="20">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="30"
                Opacity="0.25"
                ShadowDepth="0"
                Color="#000000" />
        </Border.Effect>

        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!--  Logo  -->
                <Border
                    Width="120"
                    Height="120"
                    Margin="0,0,0,32"
                    Background="White"
                    CornerRadius="30">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="64"
                        Foreground="{StaticResource PrimaryBrush}"
                        Text="&#xE7C3;" />
                </Border>

                <!--  Title  -->
                <StackPanel Margin="0,0,0,40">
                    <TextBlock
                        Margin="0,0,0,8"
                        HorizontalAlignment="Center"
                        FontSize="36"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="MonBureau" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="14"
                        Foreground="White"
                        Opacity="0.9"
                        Text="Gestion Professionnelle de Cabinet d'Avocat"
                        TextAlignment="Center" />
                </StackPanel>

                <!--  Loading Animation  -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock
                        x:Name="StatusText"
                        Margin="0,0,0,16"
                        HorizontalAlignment="Center"
                        FontSize="13"
                        Foreground="White"
                        Opacity="0.9"
                        Text="Vérification de la licence..." />

                    <ProgressBar
                        Width="200"
                        Height="4"
                        Background="#FFFFFF20"
                        BorderThickness="0"
                        Foreground="White"
                        IsIndeterminate="True" />
                </StackPanel>

                <!--  Version  -->
                <StackPanel Margin="0,40,0,0">
                    <TextBlock
                        Margin="0,0,0,4"
                        HorizontalAlignment="Center"
                        FontSize="11"
                        Foreground="White"
                        Opacity="0.7"
                        Text="Version 1.0.0" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="10"
                        Foreground="White"
                        Opacity="0.6"
                        Text="© 2025 MonBureau. Tous droits réservés." />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>